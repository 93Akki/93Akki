@model MvcApplication1.Models.CareerModel
@{
    ViewBag.Title = "Career";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Drop your resume here</h4></header>
            @using (Html.BeginForm("SBSCareer", "Career", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-row">
                    <div class="col form-group">
                        <label>First name <b style="color:red;">*</b></label>
                        @Html.TextBoxFor(model => model._FirstName, new { @class = "form-control", required = "required" })
                    </div> <!-- form-group end.// -->
                    <div class="col form-group">
                        <label>Last name <b style="color:red;">*</b></label>
                        @Html.TextBoxFor(model => model._LastName, new { @class = "form-control", required = "required" })
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row end.// -->
                <div class="form-group">
                    <label>Mobile Number <b style="color:red;">*</b></label>
                    @Html.TextBoxFor(model => model._Mobile, new { @class = "form-control", required = "required" })
                    <small class="form-text text-muted">We'll never share your mobile number with anyone else.</small>
                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label>Email <b style="color:red;">*</b></label>
                    @Html.TextBoxFor(model => model._Email, new { type = "email", @class = "form-control", required = "required" })
                    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div> <!-- form-group end.// -->
                <div class="form-group">
                    <label for="FResume">Upload your resume <b style="color:red;">*</b></label>
                    <input type="file" class="form-control-file" id="FResume" name="FResume" required="required">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Submit" />
                </div> <!-- form-group// -->

                <div id="alertMsg"></div>
            }
        </article><!-- card-body.// -->
    </div> <!-- card .// -->

    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<script type="text/javascript">

    $(document).ready(function () {
        if ('@ViewBag.Message' == 'Mail sent successfully!!!') {
            alert('Mail has been sent successfully');
        }
    });

</script>
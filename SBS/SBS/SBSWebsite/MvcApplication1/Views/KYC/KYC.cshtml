@model MvcApplication1.Models.KYCModel
@{
    ViewBag.Title = "KYC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .btn-file {
        position: relative;
        overflow: hidden;
    }

        .btn-file input[type=file] {
            position: absolute;
            top: 0;
            right: 0;
            min-width: 100%;
            min-height: 100%;
            font-size: 100px;
            text-align: right;
            filter: alpha(opacity=0);
            opacity: 0;
            outline: none;
            background: white;
            cursor: inherit;
            display: block;
        }

    #img-upload {
        width: 100%;
    }
</style>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-gray" style=" padding: 20px 0;">
    <div class="container">
        <h6 class="title-page">Hi, @Model.FirstName (@Model.MemberID) <br />Complate your KYC here</h6>
    </div> <!-- container //  -->
</section>
<!-- ========================= SECTION PAGETOP END// ========================= -->
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <main class="col-md-6" style="margin:auto;">
                <div class="card">
                    <div class="card-body">

                        <div class="col-md-12">
                            @using (Html.BeginForm("SBSKYC", "KYC", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>First Name</label>
                                        @Html.HiddenFor(m => m.MemberID, new { Value = Model.MemberID })
                                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", disabled = "disabled", @Value = Model.FirstName })
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        <label>Last Name</label>
                                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", disabled = "disabled", @Value = Model.LastName })
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Mobile</label>
                                        @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", disabled = "disabled", @Value = Model.Mobile })
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group col-md-6">
                                        <label>Email</label>
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", disabled = "disabled", @Value = Model.Email })
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>City</label>
                                        @Html.TextBoxFor(model => model.City, new { @class = "form-control", disabled = "disabled", @Value = Model.City })
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group col-md-6">
                                        <label>Country</label>
                                        @Html.TextBoxFor(model => model.Country, new { @class = "form-control", disabled = "disabled", @Value = Model.Country })
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Status</label>
                                        @Html.TextBoxFor(model => model.Country, new { @class = "form-control", disabled = "disabled", @Value = Model.Status })
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->
                                <br />
                                <div class="form-group" style="border-bottom: 1px solid #bdb9b9; padding-bottom: 10px;">
                                    <label><b>Upload Your Passport size photo here *</b></label>
                                    <div class="input-group">
                                        <span class="input-group-btn ">
                                            <span class="btn  btn-file browse  btn-primary">
                                                Browse… <input type="file" id="imgInp2" name="ImgPassportPhoto" required="required" />
                                            </span>
                                        </span>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                    <img id='img-upload2' style="width:200px;" />
                                </div>


                                <div class="form-group" style="padding-bottom: 10px;">
                                    <h6>Upload Your Aadhar Card/Voter ID Card/Driving Licence soft copy here</h6>
                                    <label>Front Side *</label>
                                    <div class="input-group">
                                        <span class="input-group-btn ">
                                            <span class="btn  btn-file browse  btn-primary">
                                                Browse… <input type="file" id="imgInp" name="ImgAadharCard" required="required" />
                                            </span>
                                        </span>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                    <img id='img-upload' style="width: 350px;" />
                                </div>


                                <div class="form-group" style="border-bottom: 1px solid #bdb9b9; padding-bottom: 10px;">
                                    <label>Back Side *</label>
                                    <div class="input-group">
                                        <span class="input-group-btn ">
                                            <span class="btn  btn-file browse  btn-primary">
                                                Browse… <input type="file" id="imgInp3" name="ImgAadharCardBack" required="required" />
                                            </span>
                                        </span>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                    <img id='img-upload3' style="width: 350px;" />
                                </div>


                                <div class="form-group" style="padding-bottom: 10px;">
                                    <h6>Upload Your Pan Card here</h6>
                                    <label>Front Side</label>
                                    <div class="input-group">
                                        <span class="input-group-btn ">
                                            <span class="btn  btn-file browse  btn-primary">
                                                Browse… <input type="file" id="imgInp1" name="ImgPanCard" />
                                            </span>
                                        </span>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                    <img id='img-upload1' style="width: 350px;" />
                                </div>

                                <div class="form-group" style="border-bottom: 1px solid #bdb9b9; padding-bottom: 10px;">
                                    <label>Back Side</label>
                                    <div class="input-group">
                                        <span class="input-group-btn ">
                                            <span class="btn  btn-file browse  btn-primary">
                                                Browse… <input type="file" id="imgInp4" name="ImgPanCardBack" />
                                            </span>
                                        </span>
                                        <input type="text" class="form-control" readonly>
                                    </div>
                                    <img id='img-upload4' style="width: 350px;" />
                                </div>

                                <br><br><br>
                                <input type="submit" class="btn btn-primary btn-block" value="Submit" />
                                <br><br><br><br><br><br>
                            }
                        </div> <!-- col.// -->

                    </div> <!-- card-body.// -->
                </div> <!-- card .// -->

            </main> <!-- col.// -->
        </div>
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<script>
    $(document).ready(function () {
        $(document).on('change', '.btn-file :file', function () {
            var input = $(this),
                label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
            input.trigger('fileselect', [label]);
        });

        $('.btn-file :file').on('fileselect', function (event, label) {

            var input = $(this).parents('.input-group').find(':text'),
                log = label;

            if (input.length) {
                input.val(log);
            } else {
                if (log) alert(log);
            }

        });
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img-upload').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        function readURL1(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img-upload1').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        function readURL2(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img-upload2').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        function readURL3(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img-upload3').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        function readURL4(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img-upload4').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#imgInp").change(function () {
            readURL(this);
        });
        $("#imgInp1").change(function () {
            readURL1(this);
        });
        $("#imgInp2").change(function () {
            readURL2(this);
        });
        $("#imgInp3").change(function () {
            readURL3(this);
        });
        $("#imgInp4").change(function () {
            readURL4(this);
        });
    });
</script>
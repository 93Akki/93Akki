@model System.Collections.Generic.IEnumerable<AdminPanel.Models.Dashboard>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .content a {
        color: #333 !important;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
        </h1>
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Info boxes -->
        <div class="row">
            @foreach (var DL in Model)
            {
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("NewMembers", "Members")">
                        <div class="info-box">
                            <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">New Members</span>
                                <span class="info-box-number">@DL.NewMember</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </a>
                    <!-- /.info-box -->
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("SBSMembers", "Members")">
                        <div class="info-box">
                            <span class="info-box-icon bg-aqua"><i class="ion ion-ios-people-outline"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">SBS Members</span>
                                <span class="info-box-number">@DL.SBSMember</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </a>
                    <!-- /.info-box -->
                </div>

                <div class="col-md-3 col-sm-6 col-xs-12">
                    <a href="@Url.Action("SBSEmployeeDetail", "Employee")">
                        <div class="info-box">
                            <span class="info-box-icon bg-aqua" style="background-color: #00a65a !important;"><i class="ion ion-ios-people-outline"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">SBS Employee</span>
                                <span class="info-box-number">@DL.SBSEmployee</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </a>
                    <!-- /.info-box -->
                </div>

                <div class="clearfix visible-sm-block"></div>

                @*<div class="col-md-3 col-sm-6 col-xs-12">
                        <a href="@Url.Action("NewMembers", "Members")">

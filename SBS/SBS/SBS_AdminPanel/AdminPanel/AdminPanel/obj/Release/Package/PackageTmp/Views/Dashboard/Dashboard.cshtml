                                <div class="info-box-content">
                                    <span class="info-box-text">KYC Pending</span>
                                    <span class="info-box-number">@DL.KYCPending</span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                        </a>
                        <!-- /.info-box -->
                    </div>

                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-green"><i class="fa fa-fw fa-file-text"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">KYC Done</span>
                                <span class="info-box-number">@DL.KYCDone</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                    </div>*@
            }
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

</div>
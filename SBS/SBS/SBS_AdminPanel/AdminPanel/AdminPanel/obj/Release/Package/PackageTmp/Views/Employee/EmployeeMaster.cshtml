@model  System.Collections.Generic.IEnumerable<AdminPanel.Models.Employee>
@{
    ViewBag.Title = "EmployeeMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/bower_components/datatable/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="row">
            <div class="col col-md-8">
                <h1 style="font-size: 24px;margin: 0px;"><i class="fa fa-fw fa-user"></i>&nbsp;Employee Master</h1>
            </div>
            <div class="col col-md-4" style="text-align:right;">
                <a href="@Url.Action("CreateNewEmployee", "Employee")" class="btn btn-primary"><i class="fa fa-user-plus"></i>&nbsp;New Employee</a>
            </div>
        </div>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Info boxes -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="SBSEmployeeDT" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>S. No.</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>DOB</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Gender</th>
                                    <th>Department</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Status</th>
                                    <th>Creation Date</th>
                                    <th>Modifiy Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var DL in Model)
                                {
                                    <tr>
                                        <td>@DL.Sno</td>
                                        <td>@DL.FirstName</td>
                                        <td>@DL.LastName</td>
                                        <td>@DL.DOB</td>
                                        <td>@DL.Mobile</td>
                                        <td>@DL.Email</td>
                                        @if (DL.Gender == 1)
                                        {
                                            <td>Male</td>
                                        }
                                        else
                                        {
                                            <td>Female</td>
                                        }
                                        <td>@DL.Department</td>
                                        <td>@DL.CityName</td>
                                        <td>@DL.StateName</td>
                                        <td>@DL.Status</td>
                                        <td>@DL.CreationDate</td>
                                        <td>@DL.ModifiyDate</td>
                                        <th><a href="@Url.Action("FillSBSEmployeeDetil", "Employee", new RouteValueDictionary(new { id = DL.EmployeeID }))"><i class="fa fa-fw fa-eye"></i>&nbsp;View</a></th>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>S. No.</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>DOB</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Gender</th>
                                    <th>Department</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Status</th>
                                    <th>Creation Date</th>
                                    <th>Modifiy Date</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/bower_components/datatable/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatable/js/dataTables.bootstrap.min.js"></script>
<script>
    $(function () {
        $('#SBSEmployeeDT').DataTable({
            "scrollX": true
        });
    });
</script>


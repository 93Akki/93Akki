@model AdminPanel.Models.CategoryMaster

<div class="modal fade" id="modal_CategoryMaster" data-backdrop='static'>
    <div class="modal-dialog">
        @using (Html.BeginForm("AddCategory", "CategoryMaster", FormMethod.Post))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">
                        <i class="fa fa-fw fa-th-large"></i>&nbsp;Category Master
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="box-body">
                        <div class="form-group col-lg-7">
                            <label for="inputPasswordOld">Category Name</label>
                            @Html.TextBoxFor(a => a.CatName, new { @class = "form-control", @required = "required" })
                        </div>

                        <div class="form-group col-lg-7">
                            <label for="inputPasswordNew">Status</label>
                            <br />
                            @Html.Label("Active", "Active")
                            @Html.RadioButtonFor(m => m.IsActive, "1", new { @id = "Active", @checked = true })
                            @Html.Label("Inactive", "Inactive")
                            @Html.RadioButtonFor(m => m.IsActive, "2", new { @id = "Inactive" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        }
    </div>
</div>